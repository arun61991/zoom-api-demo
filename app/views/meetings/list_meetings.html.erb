<div class="column is-half ">  
  <% @meetings["meetings"].each do |meeting| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
              <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= meeting["topic"] %> </strong><small><%= meeting["start_time"] %></small>
            <p>Duration <%= meeting["duration"]%>  Minutes</p>
            <p>Meeting Id - <%= meeting["id"]%></p>
            <p>Join Url - <%= @root_url + "joinmeeting/"+meeting["id"].to_s + get_pwd(meeting["join_url"]) %></p>
          </div>
        </div>
        
          <nav class="level">
            <div class="level-left is-mobile">
                <%= link_to "Start", meeting_show_path(meeting["id"]), class: "level-item" %>
                <%#= link_to edit_room_path(room), class: "level-item" do %>
                  <!-- <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span> -->
                <%# end %>
                <%#= link_to user_delete_path(meeting["id"]), method: :delete, data: { confirm: 'Are you sure want to delete Room?' } do%>
                  <!-- <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span> -->
                <%# end %>
              
            </div>
          </nav>
        
      </article>
    </div>
  <% end %>
</div>
