
<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),  html: {class: "box"}) do |f| %>
            <div class="field">
              <label for="" class="label"><%= f.label :email %></label>
              <div class="control has-icons-left">
                <%= f.text_field :email, class:"input", placeholder: "e.g. example@mail.com", required: true %>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label for="" class="label"><%= f.label :password %></label>
              <div class="control has-icons-left">
                <%= f.password_field :password, class:"input", placeholder: "*******", required: true %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="field">
              <%= f.submit "Login", class: "button is-success" %>
            </div>
            <p><%= render "devise/shared/links" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
