
<div class="column is-half ">
  <article class="media box">
    <div class="media-content">
    	<%= form_for :user, url: "create" do |form| %>
		  
        <div class="field">
          <%= form.label :email, class: "label" %>
          <div class="control">            
            <%= form.text_field :email, class: "input", placeholder: "Enter Email" %><br>            
          </div>
        </div>

        <div class="field">
          <%= form.label :first_name, class: "label" %>
          <div class="control">            
            <%= form.text_field :first_name, class: "input", placeholder: "Enter First Name" %><br>            
          </div>
        </div>

        <div class="field">
          <%= form.label :last_name, class: "label" %>
          <div class="control">            
            <%= form.text_field :last_name, class: "input", placeholder: "Enter Last Name" %><br>            
          </div>
        </div>

        <div class="field">
          <%= form.label :type, class: "label" %>
          <div class="control">
            <div class="select">
              <select id="user_type" name="user[type]" placeholder="Select User Type">
                <option value="1">Basic</option>
                <option value="2">Licensed</option>
                <option value="3">On-prem</option>
              </select>
            </div>
          </div>
        </div>

        
        <div class="field is-grouped">
          <div class="control">
            <%= form.submit class: "button is-link" %>
          </div>
          <div class="control">
            <%#= link_to "Cancel", rooms_path, class: "button is-link is-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </article>
</div>
